# =============================================================================
# APS Website - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# NEVER commit .env to version control!
#
# For production, set these as actual environment variables on your server.
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Django Secret Key
# -----------------------------------------------------------------------------
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# Must be unique and kept secret in production!
SECRET_KEY=your-secret-key-here

# -----------------------------------------------------------------------------
# REQUIRED: Allowed Hosts (comma-separated)
# -----------------------------------------------------------------------------
# List all domains that can serve your site
ALLOWED_HOSTS=americanpeptidesociety.org,www.americanpeptidesociety.org

# -----------------------------------------------------------------------------
# REQUIRED: Database Configuration
# -----------------------------------------------------------------------------
DB_NAME=aps_wagtail_2026
DB_USER=your_database_user
DB_PASSWORD=your_strong_database_password
DB_HOST=localhost
DB_PORT=5432

# -----------------------------------------------------------------------------
# REQUIRED: DigitalOcean Spaces (Media Storage)
# -----------------------------------------------------------------------------
# Get these from DigitalOcean Control Panel > API > Spaces Keys
SPACES_ACCESS_KEY=your_spaces_access_key
SPACES_SECRET_KEY=your_spaces_secret_key
SPACES_BUCKET_NAME=aps2026-static
SPACES_REGION=nyc3

# Optional: Custom domain for Spaces (e.g., if using CDN)
# SPACES_CUSTOM_DOMAIN=cdn.americanpeptidesociety.org

# -----------------------------------------------------------------------------
# OPTIONAL: Wagtail Admin Base URL
# -----------------------------------------------------------------------------
# Used for notification emails and other admin links
WAGTAILADMIN_BASE_URL=https://americanpeptidesociety.org
